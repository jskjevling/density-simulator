package {	import flash.display.Sprite;	import flash.text.*;		public class LineText extends Sprite {		private var txtFormat:TextFormat;		public var txtFont:String;		public var txtValue:String;		public var txtColor:uint;		public var txtX:Number;		public var txtY:Number;		public var txtRotation:Number;		private var theText:TextField;		private var t:* = this;				public function LineText(txtValue:String, txtColor:uint, txtX:Number, txtY:Number, txtRotation:Number) {			t.txtValue = txtValue;			t.txtColor = txtColor;			t.txtX = txtX;			t.txtY = txtY;			t.txtRotation = txtRotation;			init();		}				public function init():void {			t.theText = new TextField();			t.theText.embedFonts = true;			t.theText.antiAliasType = true;			t.txtFormat = new TextFormat();			t.txtFormat.font = "ArialS";			t.theText.text = txtValue;			t.theText.autoSize = TextFieldAutoSize.LEFT;			t.theText.rotation = txtRotation;			t.theText.textColor = txtColor;			addChild(theText);			t.theText.setTextFormat(t.txtFormat);		}	}}