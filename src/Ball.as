package {	import flash.display.Sprite;	import LineText;		public class Ball extends Sprite {		private var maskSprite:Sprite;		public var radius:Number;		public var color:uint;		public var ballAlpha:Number;		private var ballVolume:LineText;		private var bDensity:LineText;		public var realVolume:Number;				public function Ball(radius:Number, color:uint, ballAlpha:Number) {			this.radius = radius;			this.color = color;			this.ballAlpha = ballAlpha;			init();		}		public function init():void {			realVolume = calculateVolume(radius);			maskSprite = new Sprite();			maskSprite.graphics.beginFill(color, ballAlpha);			maskSprite.graphics.drawCircle(0,0,radius);			maskSprite.graphics.endFill();			addChild(maskSprite);			graphics.lineStyle(2, 0x777777);			graphics.beginFill(color, ballAlpha);			graphics.drawCircle(0,0,radius);			graphics.endFill();			graphics.lineStyle(2, 0x777777);			graphics.moveTo(0,(-radius));			graphics.lineTo((radius*1.2), (-radius));			graphics.lineTo((radius*1.2),-10);			graphics.moveTo((radius*1.2),10);			graphics.lineTo((radius*1.2),radius);			graphics.lineTo(0, radius);			ballVolume = new LineText(("V = "+(realVolume)+" cm3"), 0x333333,0,0,0);			ballVolume.x = (radius*1.2)-6;			ballVolume.y = -ballVolume.height/2;			addChild(ballVolume);			bDensity = new LineText(("ρ = "+Math.round((ballAlpha/10)*1000)/1000+" g/cm3"), 0x333333, 0, 0, 0);			bDensity.x = -bDensity.width/2;			bDensity.y = -bDensity.height/2;			bDensity.mask = maskSprite;			addChild(bDensity);		}				private function calculateVolume(radi:Number):Number {			var theVolume:Number = Math.round(((Math.PI*4)*Math.pow(radi,3))/3);			return theVolume;		}	}	}